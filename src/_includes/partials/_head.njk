<head>
    <meta charset="UTF-8">
    <!-- Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="{{meta.author}}">
    <meta name="generator" content="{{meta.generator}}">
    <meta name="description" content="{% if description %}{{description}}{% else %}{{meta.description}}{% endif %}">
    <!-- Icon -->
    <link rel="icon" href="/assets/icon/favicon.svg">
    <link rel="mask-icon" href="/assets/icon/mask-icon.svg" color="#000000">
    <link rel="apple-touch-icon" href="/assets/icon/apple-touch-icon.png">
    <!-- CSS -->
    {% css '/assets/css/main.css' | url %}
    {% css '/assets/css/tailwind.css' | url %}
    <!-- JS -->
    {% js '/assets/js/main.js' | url %}
    <!-- Title -->
    <title>
        {% if title %}{{title}}{% else %}{{meta.title}}{% endif %}
    </title>
    <!-- FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    {% cssNonCritical 'https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap&subset=latin,latin-ext' %}    
</head>